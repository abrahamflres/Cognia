<h1>Create a Profile</h1>

<%= form_with model: @profile do |f|%>

  <%= f.label :username%>
  <%= f.text_field :username%>

  <%= f.label :bio%>
  <%= f.text_field :bio%>

  <%= f.label :firstname%>
  <%= f.text_field :firstname%>

  <%= f.label :lastname%>
  <%= f.text_field :lastname%>

  <%= f.label :profile_picture%>
  <%= f.file_field :image%>

  <%= f.label :topic_id, "Topic"%>
  <%= f.collection_select :topic_id, @topics, :id, :title, prompt: "Select topic" %>


  <%= f.submit %>
<%end%>
